	<groupId>cz_cvut_fit.ortstepa</groupId>
	<artifactId>universalbookingsystem</artifactId>
	<name>UniversalBookingSystem</name>
	<packaging>war</packaging>
	<version>1.0.0-BUILD-SNAPSHOT</version>
	<properties>
		<java.version>1.7</java.version>
		<spring.version>4.0.0.RELEASE</spring.version>
		<junit.version>4.10</junit.version>
		<slf4j.version>1.6.6</slf4j.version>
		<aspectj.version>1.6.10</aspectj.version>
		<spring.security.version>3.2.0.RELEASE</spring.security.version>
		<hibernate.version>3.6.0.Final</hibernate.version>
		<log4j.version>1.2.15</log4j.version>
		<apache.commons.version>3.2.1</apache.commons.version>
		<google.api.client.version>1.18.0-rc</google.api.client.version>
		<spring.social.version>1.0.3.RELEASE</spring.social.version>
	</properties>
	<dependencies>
	<dependency>
	<groupId>commons-dbcp</groupId>
